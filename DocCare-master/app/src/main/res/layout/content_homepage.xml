<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="50dp"
                android:background="@drawable/side_nav_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Welcome to DocCure"
            android:fontFamily="cursive"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="cursive"
            android:text="Book an appointment of our specialised doctors for advice , diagnosis and treatment ."
            android:textSize="30sp"

            android:layout_marginTop="25dp"/>
    </LinearLayout>
<LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doc1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/doc_image_button_background"
            android:src="@drawable/doc4" />
        <Button
            android:id="@+id/doc_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstylepink"
            android:layout_margin="40dp"
            android:text="Book Your Appointment"
            android:drawableRight="@drawable/ic_send_black_24dp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>
